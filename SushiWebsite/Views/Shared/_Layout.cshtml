</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary bg-opacity-10 border-bottom box-shadow mb-3">
    <div class="container"> 

        <!-- Logo -->
        <a class="navbar-brand" href="/">
            <img src="/images/faticon.png" alt="Sushi Logo" class="logo">
        </a>

        <!-- Hamburger menu for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu Items -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="home" asp-action="aboutus">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="menu" asp-action="index">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="home" asp-action="privacy">Privacy</a>
                </li>
             
            </ul>
            <!-- Order Online Button -->
                    <a class="btn btn-primary ms-lg-3" href="/menu/CartView">Your Cart</a>
        </div>
    </div>
</nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

