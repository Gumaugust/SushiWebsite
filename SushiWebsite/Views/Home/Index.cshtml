</footer>
<script>
    document.getElementById("scrollDown").addEventListener("click", function(e) {
        e.preventDefault(); // Ngừng hành động mặc định của liên kết (chuyển hướng)
        document.querySelector("#specials").scrollIntoView({
            behavior: "smooth", // Cuộn mượt mà
            block: "start" // Cuộn đến đầu phần tử
        });
    });
</script>
